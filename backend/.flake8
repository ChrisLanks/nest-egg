[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    alembic/versions,
    migrations,
    *.egg-info

# Ignore codes:
# E203 - whitespace before ':'
# E266 - too many leading '#' for block comment
# E501 - line too long (handled by black)
# W503 - line break before binary operator
# W504 - line break after binary operator
ignore =
    E203,
    E266,
    E501,
    W503,
    W504

per-file-ignores =
    __init__.py:F401
    conftest.py:F401,F811
    app/main.py:E402
    app/scripts/*.py:E402
    app/services/market_data/yahoo_finance_provider.py:E402
    app/services/payoff_strategy_service.py:E402
    app/workers/celery_app.py:E402
    tests/**/*.py:F401,F841,F821
